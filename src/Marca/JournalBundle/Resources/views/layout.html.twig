{# Marca/JournalBundle/Resources/views/layout.html.twig #}

{% extends '::base.html.twig' %}
{% block title %}Marca Journal{% endblock %}

{% block javascripts %}{% endblock %}
{% block stylesheets %}{% endblock %}

{% block subnav %}
{%include 'MarcaCourseBundle::subnav.html.twig' %}
{% endblock %}


{% block sidebar %}
       <li><legend>Journal</legend></li>
             <a class="btn btn-primary" href="{{ course_path('journal_new')  }}" >Create<i class="icon-pencil icon-white"></i></a>
             <li><a href="{{ course_path('journal') }}">List Entries</a></li>  
             {% if is_granted('ROLE_INSTR') %}
             <li class="dropdown">
                <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown" id="dLabel">Roll<b class="caret"></b></a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                        {% for roll in roll %}
                        <li><a href="{{ course_path('journal_user', { 'userid': roll.userid }) }}">{{roll.firstname}} {{roll.lastname}}</a></li> 
                        {% endfor %}
                    </ul>
              </li>
              {% endif %}   

{% endblock %}  
