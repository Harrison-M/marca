{% extends 'MarcaCourseBundle:Course:layout.html.twig' %}
 
{% block body %}

<table class="table table-bordered">
    <tbody>
        {% if is_granted('ROLE_ADMIN') %}
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        {% endif %}
        <tr>
            <th>Lastname</th>
            <td>{{ entity.lastname }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ entity.firstname }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
    </tbody>
</table>

<div class="btn-group">
        <a class="btn" href="{{ path('user_profile') }}">
            Back to the list
        </a>

        <a class="btn" href="{{ path('user_profile_edit', { 'id': entity.id }) }}">
            Edit
        </a>

    </div>
{% endblock %} 