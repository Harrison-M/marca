
{% extends 'MarcaUserBundle:Profile:layout.html.twig' %}

{% block content %}
<div class="row-fluid">
<div class="span6 well">
<h3>Welcome {{ profile.firstname }} {{ profile.lastname }} </h3>
</div>
</div>   

<div class="row-fluid">
<div class="span6 well"><h3>Courses</h3>
<table class="table table-bordered table-condensed table-striped">
<thead>
        <tr>
            <th>Course</th><th>Instructor</th><th>Time</th>
        </tr>
</thead>    
<tbody>
    {% for course in courses %}
        <tr>
            <td><a class="btn btn-info" href="{{ path('course_home', { 'id': course.id }) }}">{{ course.name }}</a></td>
            <td>{{ course.lastname }}, {{ course.firstname }}</td>
            <td>{{ course.time|date('h:i a') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
</div>

{% endblock %}
