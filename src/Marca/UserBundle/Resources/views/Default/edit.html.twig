{# Marca/UserBundle/Resources/views/Default/edit.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block javascripts %}
<script src="{{ asset('bundles/marcahome/js/ckeditor/ckeditor.js') }}"></script>
{% endblock %}

{% block content %}
<script language="javascript"> 
$(document).ready(function()
{
CKEDITOR.replace( 'marca_userbundle_usertype_bio',  {
    customConfig: '{{ asset('bundles/marcahome/js/ckeditor_local/ckeditor_config.js') }}',
    height: 300,
} );
});
</script>


<div class="span9 well">


    <form class="form" action="{{ path('user_update', { 'id': user.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="novalidate">
    <legend>Please update your Profile</legend>
    {{ form_errors(edit_form) }}
         {{ form_row(edit_form.firstname) }}
         {{ form_row(edit_form.lastname) }}
         {{ form_row(edit_form.photo) }}
         {{ form_row(edit_form.bio) }}
    {{ form_rest(edit_form) }}
    <div>
        <button class="btn btn-primary" type="submit">Update</button>
    </div>
</form>

              
</div>
    
{% endblock %}
