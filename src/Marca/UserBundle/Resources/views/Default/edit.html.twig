{# Marca/UserBundle/Resources/views/Default/edit.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}

<div class="row-fluid">
<div class="span6 well">
    <h3>Please update your Profile</h3>
<form action="{{ path('user_update', { 'id': user.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <div>
        <button class="btn btn-primary" type="submit">Update</button>
    </div>
</form>
              
</div>
</div>        
{% endblock %}
