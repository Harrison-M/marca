{# Marca/UserBundle/Resources/views/layout.html.twig #}

{% extends '::base.html.twig' %}
{% block title %}Marca Profile{% endblock %}

{% block javascripts %}{% endblock %}
{% block stylesheets %}{% endblock %}


{% block sidebar %}
       <li><legend>Home</legend></li>
       {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
             <li><a href="{{ path('fos_user_resetting_request') }}">Forgot Password?</a></li>
       {% endif %}      
       {% if is_granted('ROLE_USER') %}
             <li><a href="{{ path('user_home') }}">Welcome</a></li>
             <li><a href="{{ path('enroll_find') }}">Enroll</a></li>
             <li> <a class='last' title="Logout" href="{{ path('fos_user_change_password') }}">Change Password</a></li> 
       {% endif %}
       {% if is_granted('ROLE_INSTR') %}
             <li class="nav-header">Settings</li>
             <li><a href="{{ path('course') }}">Courses</a></li>
             <li><a href="{{ path('tagset') }}">Tags</a></li>
             <li><a href="{{ path('markupset') }}">Markup</a></li>
             <li><a href="{{ path('portset') }}">Portfolios</a></li>           
       {% endif %} 
       {% if is_granted('ROLE_ADMIN') %}      
             <li><a href="{{ path('admin') }}">Permissions</a></li>
       {% endif %}      
{% endblock %}  
