{# Marca/TabBundle/Resources/views/Tagset/index.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<legend>Labels</legend>
<div class="row">
    <div class="span4">
        <a class='btn btn-primary' href="{{ path('tagset_new') }}">New Label set</a>
   </div> 
</div>

<div class="row">
<div class="span4">
    {% for tagset in tagsets%}
    <strong>{{ tagset.name }}</strong> {% if tagset.isOwner(app.user.username) %}<a class='btn btn-primary btn-mini  pull-right' href="{{ path('tag_new') }}">Add Label</a><a class="btn btn-primary btn-mini pull-right" href="{{ path('tagset_edit', { 'id': tagset.id }) }}">Edit</a> {% endif %} 
    <table class="table">
    {% for tag in tagset.tag %}
            <tr><td><span class="label {{ tag.color }}">{{ tag.name }}</span></td><td>{% if tagset.isOwner(app.user.username) %}<a class="btn btn-primary btn-mini  pull-right" href="{{ path('tag_edit', { 'id': tag.id }) }}">Edit</a>{% endif %}</td></tr>
    {% endfor %}
    </table>        
    {% endfor %}

</div>
</div>
{% endblock %}
