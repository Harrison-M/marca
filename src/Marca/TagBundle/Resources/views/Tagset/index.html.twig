{# Marca/TabBundle/Resources/views/Tagset/index.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<div class="row">
    <div class="span4 well">
        <a class='btn btn-primary' href="{{ path('tagset_new') }}">New Tagset</a>
        <a class="btn btn-info" href="{{ path('tag') }}">List Tags</a>
   </div> 
</div>

<div class="row">
<div class="span4 well">

<table class="table table-bordered table-condensed table-striped">
<thead>
    <tr>            
        <th>Name</th>        
        <th></th>
    </tr>
</thead>    
<tbody>
    {% for tagset in tagsets %}
    <tr>            
        <td>{{ tagset.name }}</td>   
        <td><a class="btn btn-primary" href="{{ path('tagset_edit', { 'id': tagset.id }) }}">Edit</a></td>       
    </tr>
    
    {% endfor %}
    </tbody>
</table>
</div>
</div>
{% endblock %}
