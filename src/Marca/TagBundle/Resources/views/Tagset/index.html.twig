
{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<div class="row well">
<div class="span6">
<table class="table table-bordered table-condensed table-striped">
<thead>
    <tr>            
        <th>Name</th>        
        <th></th>
    </tr>
</thead>    
<tbody>
    {% for entity in entities %}
    <tr>            
        <td>{{ entity.name }}</td>   
        <td><a class="btn btn-primary" href="{{ path('tagset_edit', { 'id': entity.id }) }}">Edit</a></td>       
    </tr>
    
    {% endfor %}
    </tbody>
</table>
</div>
</div>
{% endblock %}
