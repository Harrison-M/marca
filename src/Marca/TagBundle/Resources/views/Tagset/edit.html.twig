{# Marca/TabBundle/Resources/views/Tagset/edit.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<div class="span9 well">
    <legend>Label Sets</legend>
</div> 

<div class="span9 well">
    
<form action="{{ path('tagset_update', { 'id': tagset.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_errors(edit_form) }}

           {{ form_row(edit_form.name) }}
    
    {{ form_rest(edit_form) }}
    <div class='margin-top'>
        <button class="btn btn-primary" type="submit">Update</button><a class="btn" href="{{ path('tagset') }}">Cancel</a> 
    </div>
</form>
       
<form action="{{ path('tagset_delete', { 'id': tagset.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
     
{% endblock %}
