
{% extends 'MarcaTagBundle::layout.html.twig' %}

{% block content %}

<div class="row-fluid">
<div class="span6">
<table class="table table-bordered table-condensed table-striped">
<thead>
    <tr>           
        <th>Name</th> 
        <th>Tagset</th>
        <th>Color</th>               
        <th>Icon</th>        
        <th></th>
    </tr>
</thead>    
<tbody>
    {% for entity in entities %}
    <tr>         
        <td>{{ entity.name }}</td>
        <td>{{ entity.tagset.name }}</td> 
        <td>{{ entity.color }}</td>             
        <td>{{ entity.icon }}</td>        
        <td><div class="btn-group"><a class="btn" href="{{ path('tag_edit', { 'id': entity.id }) }}">edit</a></div>

</td>       
    </tr>
    
    {% endfor %}
    </tbody>
</table>
</div>
</div>
{% endblock %}
