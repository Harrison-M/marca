
{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<div class="row">   
<div class="span6 well">     
<form action="{{ path('tag_update', { 'id': tag.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_errors(edit_form) }}

        <table class="table table-bordered table-condensed table-striped">   
            <tr><td>{{ form_row(edit_form.name) }}</td></tr>
            <tr><td>{{ form_row(edit_form.color) }}</td></tr>
            <tr><td>{{ form_row(edit_form.icon) }}</td></tr>
            <tr><td>{{ form_row(edit_form.tagset) }}</td></tr>
        </table>   
    
    {{ form_rest(edit_form) }}
        <div>
        <button class="btn btn-primary" type="submit">Update</button>
    </div>
</form>
     
<form action="{{ path('tag_delete', { 'id': tag.id }) }}" method="post">
            {{ form_widget(delete_form) }}
        <div>
            <button class="btn btn-danger" type="submit">Delete</button>
        </div>
</form>
</div>
</div>         
{% endblock %}
