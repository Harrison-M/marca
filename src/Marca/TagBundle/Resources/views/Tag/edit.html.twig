{# Marca/TabBundle/Resources/views/Tag/edit.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% form_theme edit_form 'MarcaHomeBundle:Form:fields.html.twig' %}

{% block content %}
<div class="row">   
<div class="span4 well">     
<form class="form" action="{{ path('tag_update', { 'id': tag.id }) }}" method="post" {{ form_enctype(edit_form) }}>
     {{ form_errors(edit_form) }}
            {{ form_row(edit_form.name) }}
            {{ form_row(edit_form.color) }}
            {{ form_row(edit_form.tagset) }} 
            {{ form_row(edit_form.icon) }}
    {{ form_rest(edit_form) }}
    <div class="submit">
        <button class="btn btn-primary" type="submit">Update</button>
    </div>
</form>
     
<form action="{{ path('tag_delete', { 'id': tag.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <div class="delete">
            <button class="btn btn-danger" type="submit">Delete</button>
        </div>
</form>
</div>
</div>         
{% endblock %}
