{% extends 'MarcaTagBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">
<div class="span2">
<div class="btn-group">
<a class="btn" href="{{ path('tag') }}">List</a>
<a class="btn" href="{{ path('tag_edit', { 'id': tag.id }) }}">Edit</a>
 
</div> 
</div>       
  
<div class="span1">        
<form action="{{ path('tag_delete', { 'id': tag.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
  
</div>
        
<div class="row-fluid">
<div class="span4">    
<table class="table table-bordered table-condensed table-striped">
<tbody>        
    <tr>
        <th>Id</th>         
        <td>{{ tag.id }}</td>         
    </tr>        
    <tr>
        <th>Name</th>         
        <td>{{ tag.name }}</td>         
    </tr>        
    <tr>
        <th>Color</th>         
        <td>{{ tag.color }}</td>         
    </tr>        
    <tr>
        <th>Userid</th>         
        <td>{{ tag.userid }}</td>         
    </tr>        
    <tr>
        <th>Icon</th>         
        <td>{{ tag.icon }}</td>         
    </tr>  
</tbody>
</table>
</div>        
</div>      
{% endblock %}
