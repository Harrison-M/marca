{# Marca/CourseBundle/Resources/views/Term/show.html.twig #}

{% extends 'MarcaCourseBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">
<div class="span2">
<div class="btn-group">
<a class="btn" href="{{ path('term') }}">List</a>
<a class="btn" href="{{ path('term_edit', { 'id': term.id }) }}">Edit</a>
 
</div> 
</div>       
  
<div class="span1">        
<form action="{{ path('term_delete', { 'id': term.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
  
</div>
        
<div class="row-fluid">
<div class="span4">    
<table class="table table-bordered table-condensed table-striped">
<tbody>        
    <tr>
        <th>Id</th>         
        <td>{{ term.id }}</td>         
    </tr>        
    <tr>
        <th>Term</th>         
        <td>{{ term.term }}</td>         
    </tr>        
    <tr>
        <th>Termname</th>         
        <td>{{ term.termName }}</td>         
    </tr>        
    <tr>
        <th>Status</th>         
        <td>{{ term.status }}</td>         
    </tr>  
</tbody>
</table>
</div>        
</div>      
{% endblock %}
