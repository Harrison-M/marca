{# Marca/CourseBundle/Resources/views/Term/index.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<legend>Terms</legend>

<div class="row">
   <div class="span6">
      <a class="btn btn-primary" href="{{ path('term_new') }}">New Term</a>
   </div>
</div>


<div class="row-fluid">
<div class="span6">
<table class="table table-bordered table-condensed table-striped">
<thead>
    <tr>             
        <th>Term</th>        
        <th>Termname</th>        
        <th>Status</th>        
        <th>Actions</th>
    </tr>
</thead>    
<tbody>
    {% for term in terms %}
    <tr>            
        <td>{{ term.term }}</td>        
        <td>{{ term.termName }}</td>        
        <td>{{ term.status }}</td>        
        <td><a class="btn btn-primary btn-small" href="{{ path('term_edit', { 'id': term.id }) }}">Edit</a></td>       
    </tr>
    
    {% endfor %}
    </tbody>
</table>
</div>
</div>
{% endblock %}
