
{% extends 'MarcaCourseBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">
   <div class="span4">
      <a class="btn btn-primary" href="{{ path('roll_new') }}">New</a>
   </div>
</div> 

<div class="row-fluid">
<div class="span6">
<table class="table table-bordered table-condensed table-striped">
<thead>
    <tr>        
        <th>Id</th>        
        <th>Name</th>        
        <th>Role</th>        
        <th>Status</th>        
        <th>Actions</th>
    </tr>
</thead>    
<tbody>
    {% for entity in entities %}
    <tr>        
        <td><a href="{{ path('roll_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>        
        <td>{{ entity.lastname }}, {{ entity.firstname }}</td>        
        <td>{{ entity.role }}</td>        
        <td>{{ entity.status }}</td>        
        <td><div class="btn-group"><a class="btn" href="{{ path('roll_show', { 'id': entity.id }) }}">show</a><a class="btn" href="{{ path('roll_edit', { 'id': entity.id }) }}">edit</a></div>

</td>       
    </tr>
    
    {% endfor %}
    </tbody>
</table>
</div>
</div>
{% endblock %}
