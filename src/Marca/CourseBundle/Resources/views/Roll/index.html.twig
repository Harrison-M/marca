{# Marca/CourseBundle/Resources/views/Roll/index.html.twig #}

{% extends 'MarcaCourseBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">
   <div class="span4">
      <a class="btn btn-primary" href="{{ path('roll_new') }}">New</a>
   </div>
</div> 

<div class="row-fluid">
<div class="span6">
<table class="table table-bordered table-condensed table-striped">
<thead>
    <tr>        
        <th>Id</th>        
        <th>Name</th>        
        <th>Role</th>        
        <th>Status</th>        
        <th>Actions</th>
    </tr>
</thead>    
<tbody>
    {% for roll in rolls %}
    <tr>        
        <td><a href="{{ path('roll_show', { 'id': roll.id }) }}">{{ roll.id }}</a></td>        
        <td>{{ roll.lastname }}, {{ roll.firstname }}</td>        
        <td>{{ roll.role }}</td>        
        <td>{{ roll.status }}</td>        
        <td><div class="btn-group"><a class="btn" href="{{ path('roll_show', { 'id': roll.id }) }}">show</a><a class="btn" href="{{ path('roll_edit', { 'id': roll.id }) }}">edit</a></div>

</td>       
    </tr>
    
    {% endfor %}
    </tbody>
</table>
</div>
</div>
{% endblock %}
