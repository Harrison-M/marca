{# Marca/CourseBundle/Resources/views/Course/edit.html.twig #}


{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block javascripts %}
<script src="{{ asset('bundles/marcahome/js/jquery-ui-1.8.22.custom.min.js') }}"></script> 
<script src="{{ asset('bundles/marcahome/js/jquery-ui-timepicker-addon.js') }}"></script>
{% endblock %}
{% block stylesheets %}
<link type="text/css" rel="stylesheet" href="{{ asset('bundles/marcahome/css/smoothness/jquery-ui-1.8.17.custom.css') }}">
{% endblock %}

{% block content %}
<script language="javascript"> 
$(document).ready(function()
{
$( '#marca_coursebundle_coursetype_time' ).timepicker({
showButtonPanel: true,
ampm: false,
});
});
</script>


 
<div class="span8 well"> 
<legend>Course Settings</legend>     
<span class='alert alert-info'>You may edit these settings at any time.</span>
</div>

<form class="form" action="{{ path('course_update', { 'courseid': course.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="novalidate">  
    
    
        
    {{ form_errors(edit_form) }}
            <div class="span4 well">
            {{ form_row (edit_form.name) }}    
            {{ form_row (edit_form.term) }}
            {{ form_row (edit_form.time) }}
            {{ form_row (edit_form.portset) }} 
            {{ form_row (edit_form.enroll) }} 
            {{ form_row (edit_form.post) }} 
            {{ form_row (edit_form.multicult) }} 
            {{ form_row (edit_form.studentForum) }}         
            </div> 
    
            <div class="span4 well"> 
            {{ form_row (edit_form.notes) }}  
            {{ form_row (edit_form.forum) }} 
            {{ form_row (edit_form.journal) }} 
            {{ form_row (edit_form.portfolio) }} 
            {{ form_row (edit_form.zine) }} 
            </div>
    
            <div class="span4 well">
            {{ form_row (edit_form.parents) }} 
            </div> 
      
            <div class="span4 well">        
            {{ form_row (edit_form.tagset) }}
            </div> 
 
            <div class="span4 well">
            {{ form_rest(edit_form) }}    
            </div> 
      <div class="span8 well"> 
      <button class="btn btn-primary" type="submit">Update</button><a style="margin-left: 1em;" class="btn btn-warning" href="{{ path('course') }}">Cancel</a>
      </div>
</form>
</div>
{% endblock %}
