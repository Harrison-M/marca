
{% extends 'MarcaCourseBundle:Course:layout.html.twig' %}

{% block content %}
<div class="span11">
<div class="row-fluid">
   <div class="span4">
      <a class="btn btn-primary" href="{{ path('course_new') }}">New</a>
   </div>
</div> 

<div class="row-fluid">
<div class="span6">
<table class="table table-bordered table-condensed table-striped">
<thead>
    <tr>        
        <th>Id</th>        
        <th>Name</th>        
        <th>Time</th>
        <th>Actions</th>
    </tr>
</thead>    
<tbody>
    {% for entity in entities %}
    <tr>        
        <td><a href="{{ path('course_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>        
        <td>{{ entity.name }}</td>        
        <td>{{ entity.time|date('h:i a') }}</td>        
        <td><div class="btn-group"><a class="btn" href="{{ path('course_show', { 'id': entity.id }) }}">show</a><a class="btn" href="{{ path('course_edit', { 'id': entity.id }) }}">edit</a></div>

</td>       
    </tr>
    
    {% endfor %}
    </tbody>
</table>
</div>
</div>
</div>
{% endblock %}

