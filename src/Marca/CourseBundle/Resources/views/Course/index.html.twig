{% extends 'MarcaCourseBundle:Course:layout.html.twig' %}
 
{% block body %}
    <div class="row-fluid">
      <div class="span12">
        <a class="btn btn-primary" href="{{ path('course_new') }}">Create a new Course</a>
      </div>
    </div> 

    <div class="row-fluid">
      <div class="span4">
        <table class="table table-bordered table-condensed table-striped">
        <tbody>
        {% for entity in entities %}
        <tr>
            <td>{{ entity.name }}</td>
            <td>{{ entity.time|date('h:i a') }}</td>
            <td>
                <div class="btn-group">
                 <a class="btn" href="{{ path('course_show', { 'id': entity.id }) }}">show</a>
                 <a class="btn" href="{{ path('course_edit', { 'id': entity.id }) }}">edit</a>
                </div>
            </td>
          </tr>
        {% endfor %}
        </tbody>
        </table>
        </div>
    </div>  

{% endblock %}