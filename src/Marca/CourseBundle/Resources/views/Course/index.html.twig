
{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">
<div class="span6 well">
<table class="table table-bordered table-condensed table-striped">
<thead>
    <tr>              
        <th>Course Name</th>        
        <th>Time</th>
        <th>Actions</th>
    </tr>
</thead>    
<tbody>
    {% for entity in entities %}
    <tr>         
        <td>{{ entity.name }}</td>        
        <td>{{ entity.time|date('h:i a') }}</td>        
        <td><div class="btn-group"><a class="btn btn-info" href="{{ path('course_show', { 'id': entity.id }) }}">Course Details</a><a class="btn btn-primary" href="{{ path('course_edit', { 'id': entity.id }) }}">Edit this Course</a></div>

</td>       
    </tr>
    
    {% endfor %}
    </tbody>
</table>
</div>
</div>

<div class="row-fluid">
   <div class="span4">
      <a class="btn btn-primary" href="{{ path('course_new') }}">Create a New Course</a>
   </div>
</div> 
{% endblock %}

