{# Marca/CourseBundle/Resources/views/Course/roll.html.twig #}

{% extends 'MarcaCourseBundle::layout.html.twig' %}

{% block content %}
<div class="span8 well">

<legend>{{ profile.firstname }} {{ profile.lastname }}  </legend>
<p><a class="" target="_blank" href="mailto:{{ profile.email }}">{{ profile.email }}</a></p>

<ul class="thumbnails">
  <li class="span2">
    <div class="thumbnail">
      <img src="{{ profile.photo }}" alt="{{ profile.firstname }} {{ profile.lastname }}">
      <h3></h3>
      <p>{{ profile.firstname }} {{ profile.lastname }}</p>
    </div>
  </li>
</ul>

<p>{{ profile.bio|raw }}</p>
</div>

<div class="span8 well">
    <ul>
        <li>Forums:  {{ countForums|length}}</li>  
        <li>Comments:  {{ countComments|length}}</li>
        <li>Replies:  {{ countReplies|length}}</li>  
        <li>Total:  {{ countForums|length + countComments|length + countReplies|length }}</li>  
    </ul>
</div>
{% endblock %}
