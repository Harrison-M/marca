{# Marca/HomeBundle/Resources/views/Page/index.html.twig #}

{% extends 'MarcaHomeBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">
   <div class="span4">
      <a class="btn btn-primary" href="{{ path('page_new') }}">New</a>
   </div>
</div> 

<div class="row-fluid">
<div class="span6">
<table class="table table-bordered table-condensed table-striped">
<thead>
    <tr>        
        <th>Id</th>        
        <th>Body</th>        
        <th>Actions</th>
    </tr>
</thead>    
<tbody>
    {% for page in pages %}
    <tr>        
        <td><a href="{{ path('page_show', { 'id': page.id }) }}">{{ page.id }}</a></td>        
        <td>{{ page.body }}</td>        
        <td><div class="btn-group"><a class="btn" href="{{ path('page_show', { 'id': page.id }) }}">show</a><a class="btn" href="{{ path('page_edit', { 'id': page.id }) }}">edit</a></div>

</td>       
    </tr>
    
    {% endfor %}
    </tbody>
</table>
</div>
</div>
{% endblock %}
