{% extends 'MarcaUserBundle:Profile:layout.html.twig' %}

{% block content %}
<div class="row-fluid">
<div class="span6 well">
    <h3>Welcome to Marca</h3> 
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
