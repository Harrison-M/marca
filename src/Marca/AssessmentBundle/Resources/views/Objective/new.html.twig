{# Marca/AssessmentBundle/Resources/views/Objective/new.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block javascripts %}
<script src="{{ asset('bundles/marcahome/js/ckeditor/ckeditor.js') }}"></script>
{% endblock %}

{% block content %}
<script language="javascript"> 
$(document).ready(function()
{
CKEDITOR.replace( 'marca_assessmentbundle_objectivetype_objective',  {
    customConfig: '{{ asset('bundles/marcahome/js/ckeditor_local/ckeditor_config.js') }}'
} );    
CKEDITOR.replace( 'marca_assessmentbundle_objectivetype_description',  {
    customConfig: '{{ asset('bundles/marcahome/js/ckeditor_local/ckeditor_config.js') }}'
} );
});
</script>

<div class="span9 well">
<legend>Assessment</legend> 
<a class="btn" href="{{ path('assessmentset') }}">List Assessment Sets</a>
</div> 

<div class="span9 well"> 
<form action="{{ path('objective_create', {'assessmentsetid':assessmentsetid}) }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <div>
        <button class="btn btn-primary" type="submit">Create</button><a class="btn" href="">Cancel</a>
    </div>
</form>
</div>
{% endblock %}
