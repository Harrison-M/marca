
{% extends 'MarcaForumBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">    
<form action="{{ path('forum_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <div>
        <button class="btn btn-primary" type="submit">Edit</button>
    </div>
</form>
</div>

<div class="row-fluid">
<div class="span1">        
<form action="{{ path('forum_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
</div>
{% endblock %}
