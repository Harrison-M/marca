{# Marca/ForumBundle/Resources/views/Forum/show.html.twig #}

{% extends 'MarcaForumBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">
<div class="span2">
<div class="btn-group">
<a class="btn" href="{{ path('forum_edit', { 'id': forum.id }) }}">Edit</a>
 
</div> 
</div>       
  
<div class="span1">        
<form action="{{ path('forum_delete', { 'id': forum.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
  
</div>
        
<div class="row-fluid">
<div class="span4">    
<table class="table table-bordered table-condensed table-striped">
<tbody>        
    <tr>
        <th>Id</th>         
        <td>{{ forum.id }}</td>         
    </tr>        
    <tr>
        <th>Title</th>         
        <td>{{ forum.title }}</td>         
    </tr>        
    <tr>
        <th>Body</th>         
        <td>{{ forum.body }}</td>         
    </tr>        
    <tr>
        <th>Created</th>        <td>{{ forum.created|date('Y-m-d H:i:s') }}</td>         
    </tr>        
    <tr>
        <th>Updated</th>        <td>{{ forum.updated|date('Y-m-d H:i:s') }}</td>         
    </tr>  
</tbody>
</table>
</div>        
</div>      
{% endblock %}
