{# Marca/ForumBundle/Resources/views/Forum/index.html.twig #}

{% extends 'MarcaForumBundle::layout.html.twig' %}

{% block content %}

<div class="span9 well" >
{% for forumEntry in forumEntries %}    
        <div class="page-header" >
            <strong><a class="forum_title" title="Open this discussion" href="{{ course_path('forum_show', { 'id': forumEntry.id }) }}">{{ forumEntry.title }}</a></strong>  
             <span class="forum_comments">( {{ forumEntry.comments|length }} comment{% if forumEntry.comments|length !=1 %}s{% endif %} )</span><br />
            <span>Updated  {{ forumEntry.updated|date('M d Y, h:ia') }}</span>
    </div>
         

{% else %}
   
There are no open discussions at this time.  
        
{% endfor %}

    
<div class="navigation">
    {{ forumEntries.render()|raw }}
</div>
        
</div>        
{% endblock %}
