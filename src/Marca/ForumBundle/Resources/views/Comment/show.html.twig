{# Marca/ForumBundle/Resources/views/Comment/show.html.twig #}

{% extends 'MarcaForumBundle::layout.html.twig' %}

{% block content %}

<div class="span2">
<a class="btn btn-info" href="{{ course_path('comment') }}">List</a>
<a class="btn btn-primary" href="{{ course_path('comment_edit', { 'id': comment.id }) }}">Edit</a>
 
</div>       
  
<div class="span1">        
<form action="{{ course_path('comment_delete', { 'id': comment.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
  

        

<div class="span6">    
<table class="table table-bordered table-condensed table-striped">
<tbody>        
    <tr>
        <th>Id</th>         
        <td>{{ comment.id }}</td>         
    </tr>        
    <tr>
        <th>Parent</th>         
        <td>{{ comment.parent }}</td>         
    </tr>        
    <tr>
        <th>Body</th>         
        <td>{{ comment.body }}</td>         
    </tr>        
    <tr>
        <th>Created</th>        <td>{{ comment.created|date('Y-m-d H:i:s') }}</td>         
    </tr>        
    <tr>
        <th>Updated</th>        <td>{{ comment.updated|date('Y-m-d H:i:s') }}</td>         
    </tr>  
</tbody>
</table>
</div>          
{% endblock %}
