{# Marca/ForumBundle/Resources/views/Comment/edit.html.twig #}

{% extends 'MarcaForumBundle::layout.html.twig' %}

{% block content %}

<div class="span2">
<a class="btn btn-info" href="{{ course_path('comment') }}">List</a>
 
</div>       
  
<div class="span1">        
<form action="{{ course_path('comment_delete', { 'id': comment.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
  


<div class="row">   
    <div class="span4 well">  
        <form action="{{ course_path('comment_update', { 'id': comment.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            {{ form_widget(edit_form) }}
        <div>
            <button class="btn" type="submit">Edit</button>
        </div>
        </form>
    </div>
</div>
{% endblock %}
