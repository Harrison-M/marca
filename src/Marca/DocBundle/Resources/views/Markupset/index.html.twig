{# Marca/DocBundle/Resources/views/Markupset/index.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<legend>Markup</legend>

<div class="row">
<div class="span8">
      <div class="btn-toolbar">
      <a class="btn btn-primary" href="{{ path('markupset_new') }}">Create New Markup Set</a>
      <a class="btn btn-primary" href="{{ path('find_markupset') }}"> Import a Shared Markup Set</a>
      </div>
</div> 
</div>

<div class="row">
<div class="span8">


    {% for markupset in markupsets%}
    <strong>{{ markupset.name }}</strong> {% if markupset.isOwner(app.user.username) %}<a class="btn btn-primary btn-mini pull-right" href="{{ path('markupset_edit', { 'id': markupset.id }) }}">Edit This Markup Set</a> {% endif %} 
    <table class="table">
    {% for markup in markupset.markup %}
            <tr><td><span class="label {{ markup.color }}">{{ markup.name }}</span></td>
                <td>{% if markup.url != '' or markup.url is not null %}<a href="{{ markup.url }}" target="_blank">URL</a>{% else %}No URL{% endif %}</td><td colspan=2>{{ markup.mouseover }}</td>
                <td>{% if markupset.isOwner(app.user.username) %}<a class="btn btn-primary btn-mini  pull-right" href="{{ path('markup_edit', { 'id': markup.id }) }}">Edit</a>{% endif %}</td></tr>
            
    {% endfor %}
    </table>
    {% if markupset.isOwner(app.user.username) %}
    <div class ="btn-toolbar pull-right">
    <a class='btn btn-primary btn-mini' href="{{ path('markup_new', { 'set_id' : markupset.getid}) }}">Create Markup Tag</a>
    <a class='btn btn-primary btn-mini' href="{{ path('add_tags', { 'id' : markupset.getid}) }}">Add tags to this set</a>
    </div>
    {% endif %}
    <div class="row"></div>
    {% endfor %}

</div>
</div>
{% endblock %}
