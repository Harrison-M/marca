{# Marca/DocBundle/Resources/views/Markupset/index.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %} 
<legend>Markup Set</legend>
<div class="row">   
    <div class="span4 well">  
        <form action="{{ path('markupset_update', { 'id': markupset.id }) }}" method="post" {{ form_enctype(edit_form) }}>
         {{ form_errors(edit_form) }}
        
            {{ form_row(edit_form.name) }}
            {{ form_row(edit_form.description) }}
            {{ form_row(edit_form.shared) }}
    {{ form_rest(edit_form) }}
        <div class='margin-top'>
            <button class="btn btn-primary" type="submit">Edit</button><a class="btn btn" href="{{ path('markupset') }}">Cancel</a>
        </div>
        </form>
        <div>
        <form action="{{ path('markupset_delete', { 'id': markupset.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
         </form> 
         </div>
    </div>
</div>
{% endblock %}
