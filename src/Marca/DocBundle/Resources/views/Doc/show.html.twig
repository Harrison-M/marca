{% extends 'MarcaDocBundle::layout.html.twig' %}

{% block content %}    
<div class="row-fluid">
<div class="span10 well">    
       
{{ entity.body|raw }}       

</div>        
</div>

<div class="row-fluid">
<div class="span2">
<div class="btn-group">
<a class="btn" href="{{ path('doc_edit', { 'id': entity.id }) }}">Edit</a>
</div> 
</div>       
  
<div class="span1">        
<form action="{{ path('doc_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
  
</div>
{% endblock %}
