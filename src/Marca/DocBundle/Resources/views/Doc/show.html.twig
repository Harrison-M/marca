{% extends 'MarcaDocBundle::layout.html.twig' %}

{% block content %} 
<script language="javascript"> 
$(document).ready(function()
{
$('.eDoc_note').each(function(index) { 
note_index = index + 1;
var note_number = '<span class="blue">' + note_index + '</span>';
var note = '<div class="cell divider clear">'+ note_number + $(this).html() + '</div>';
$('#notes_container').append(note); 
});
 
$('.eDoc_highlight').each(function(index) { 
var span_number = index + 1;
var span_append = '<span class="hide eDoc_super">' + span_number + '</span>';
$(this).append(span_append); 
});
});
</script>

<div class="row">
  
<div class="span9  well">
    <h4>{{file.name}}</h4>
    {% if file.project %}<span class="label label-info">{{file.project.name}}</span>{% endif%}  {{file.updated|date('M d Y,   g:i a')}} 
    <div class="btn-group pull-right">
    <a class=" btn btn-info" href="{{ path('file') }}">List Files</a> 
    <a class="btn btn-primary" href="{{ path('file_edit', { 'id': file.id }) }}">Edit Listing</a>    
    </div>
</div>
</div>


<div class="row">
<div class="span9 well doc">    
       
{{ entity.body|raw }}       

    
 <a class="pull-right btn btn-primary" href="{{ path('doc_edit', { 'id': entity.id }) }}">Edit Content</a>
</div>        

<div class="span2 well doc">

<div class='cell'>
<a class="btn btn-primary btn-mini" href="javascript:void(0);" 
 onclick="$('#notes_container').toggle();$('.eDoc_note').toggle();$('.eDoc_super').toggle();" tabindex="11" title="Show Notes">Notes</a>
</div>

<div id='notes_container' class='divider cell clear hide'>
</div>
</div>    

</div>
{% endblock %}
