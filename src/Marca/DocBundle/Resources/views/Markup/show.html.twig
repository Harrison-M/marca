{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">
<div class="span2">
<div class="btn-group">
<a class="btn" href="{{ path('markup') }}">List</a>
<a class="btn" href="{{ path('markup_edit', { 'id': entity.id }) }}">Edit</a>
 
</div> 
</div>       
  
<div class="span1">        
<form action="{{ path('markup_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
  
</div>
        
<div class="row-fluid">
<div class="span4">    
<table class="table table-bordered table-condensed table-striped">
<tbody>        
    <tr>
        <th>Id</th>         
        <td>{{ entity.id }}</td>         
    </tr>        
    <tr>
        <th>Userid</th>         
        <td>{{ entity.userid }}</td>         
    </tr>        
    <tr>
        <th>Name</th>         
        <td>{{ entity.name }}</td>         
    </tr>        
    <tr>
        <th>Function</th>         
        <td>{{ entity.function }}</td>         
    </tr>        
    <tr>
        <th>Value</th>         
        <td>{{ entity.value }}</td>         
    </tr>        
    <tr>
        <th>Set</th>         
        <td>{{ entity.set }}</td>         
    </tr>  
</tbody>
</table>
</div>        
</div>      
{% endblock %}
