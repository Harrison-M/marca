{# Marca/PortfolioBundle/Resources/views/Portfolio/edit.html.twig #}

{% extends 'MarcaPortfolioBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">
<div class="span2">
<div class="btn-group">
<a class="btn" href="{{ course_path('portfolio') }}">List</a>
 
</div> 
</div>       
  
<div class="span1">        
<form action="{{ course_path('portfolio_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
  
</div>
<div class="row-fluid">    
<form action="{{ course_path('portfolio_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_errors(edit_form) }}
         {{ form_row(edit_form.title) }}
         {{ form_row(edit_form.body) }}
    {{ form_rest(edit_form) }}
    <div>
        <button class="btn" type="submit">Edit</button>
    </div>
</form>
</div>
{% endblock %}
