{# Marca/PortfolioBundle/Resources/views/Portitem/edit.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block javascripts %}
<script src="{{ asset('bundles/marcahome/js/ckeditor/ckeditor.js') }}"></script>
{% endblock %}

{% block content %}
<script language="javascript"> 
$(document).ready(function()
{
CKEDITOR.replace( 'marca_portfoliobundle_portitemtype_description',  {
    customConfig: '{{ asset('bundles/marcahome/js/ckeditor_local/ckeditor_config.js') }}'
} );
});
</script>
<div class="span9 well">
<legend>Portfolios</legend> 

</div>   
      
<div class="span9 well">
<form action="{{ path('portitem_update', { 'id': portitem.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_errors(edit_form) }}
            {{ form_row(edit_form.name) }}
            {{ form_row(edit_form.description) }}
    {{ form_rest(edit_form) }}
    <div>
        <button class="btn btn-primary" type="submit">Update</button>
    </div>
</form>
<form class="form" action="{{ path('portitem_delete', { 'id': portitem.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn delete_button pull-right" type="submit">Delete</button>
</form>        
</div>
       
{% endblock %}
