{# Marca/FileBundle/Resources/views/layout.html.twig #}

{% extends '::base.html.twig' %}
{% if scope is not defined %}{% set scope = 'x' %}{% endif %}
{% block title %}Marca Projects{% endblock %}

{% block javascripts %}{% endblock %}
{% block stylesheets %}{% endblock %}

{% block subnav %}
{%include 'MarcaCourseBundle::subnav.html.twig' %}
{% endblock %}

{% block sidebar %}  
       {% if is_granted('ROLE_USER') %}
             <li class="{% if scope=='m' %}active{% endif %}"><a href="{{ course_path('file_list', { 'project': 'recent', 'sort': 'updated', 'scope': 'mine' , 'tag': '0'}) }}">My Files</a></li>
             <li class="{% if scope=='a' %}active{% endif %}"><a href="{{ course_path('file_list', { 'project': 'recent', 'sort': 'updated', 'scope': 'all'  , 'tag': '0'}) }}">All Files</a></li>
             <li class=""><a href="{{ course_path('doc_new') }}">Create eDoc</a></li>
             <li class=""><a href="{{ course_path('file_upload') }}">Upload File</a></li>
       {% endif %}
            
    <ul class="nav nav-list">
    {% for tag in tags %}
      <li><a href="{{ course_path('file_tag_list', { 'project': 'recent', 'sort': 'updated', 'scope': 'all'  , 'tag': tag.id}) }}"><span class="label {{ tag.color }}">{{ tag.name }}</span></a></li>
    {% endfor %}
    </ul>  
{% endblock %}  
