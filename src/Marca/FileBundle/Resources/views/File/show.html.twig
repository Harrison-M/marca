{# Marca/FileBundle/Resources/views/File/show.html.twig #}

{% extends 'MarcaFileBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">
<div class="span2">
<div class="btn-group">
<a class="btn" href="{{ course_path('file') }}">List</a>
<a class="btn" href="{{ course_path('file_edit', { 'id': file.id }) }}">Edit</a>
 
</div> 
</div>       
  
<div class="span1">        
<form action="{{ course_path('file_delete', { 'id': file.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
  
</div>
        
<div class="row-fluid">
<div class="span4">    
<table class="table table-bordered table-condensed table-striped">
<tbody>        
    <tr>
        <th>Id</th>         
        <td>{{ file.id }}</td>         
    </tr>        
    <tr>
        <th>Userid</th>         
        <td>{{ file.userid }}</td>         
    </tr>        
    <tr>
        <th>Courseid</th>         
        <td>{{ file.courseid }}</td>         
    </tr>        
    <tr>
        <th>Name</th>         
        <td>{{ file.name }}</td>         
    </tr>        
    <tr>
        <th>Path</th>         
        <td>{{ file.path }}</td>         
    </tr>        
    <tr>
        <th>Created</th>        <td>{{ file.created|date('Y-m-d H:i:s') }}</td>         
    </tr>        
    <tr>
        <th>Updated</th>        <td>{{ file.updated|date('Y-m-d H:i:s') }}</td>         
    </tr>  
</tbody>
</table>
</div>        
</div>      
{% endblock %}
