{% extends 'MarcaFileBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">
    <ul class="nav nav-tabs">
    {% for project in projects %}
            <li><a class="" href="{{ path('file_project', { 'id': project.id }) }}">{{ project.name }}</a></li>
    {% endfor %}
     </ul>
</div>
<div class="row-fluid">
<div class="span6">
<table class="table table-bordered table-condensed table-striped">
<thead>
    <tr>          
        <th>Name</th>        
        <th>Updated</th>        
        <th>Actions</th>
    </tr>
</thead>    
<tbody>
    {% for entity in entities %}
    <tr>        
        <td><a href="{{ path('file_view', { 'id': entity.id }) }}">{{ entity.name }}</a></td>  
        <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif%}</td>        
        <td><div class="btn-group"><a class="btn btn-primary" href="{{ path('file_edit', { 'id': entity.id }) }}">edit</a></div>

</td>       
    </tr>
    
    {% endfor %}
    </tbody>
</table>
</div>
</div>
{% endblock %}
