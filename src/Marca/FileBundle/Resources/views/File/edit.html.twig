{# Marca/FileBundle/Resources/views/File/edit.html.twig #}

{% extends 'MarcaFileBundle::layout.html.twig' %}

{% block content %}

<div class="row">
<div class="span6  well"> 
<form action="{{ course_path('file_update', { 'id': file.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="novalidate">             
     {{ form_errors(edit_form) }}   
        
        {{ form_row (edit_form.name) }}      
        {{ form_row (edit_form.project) }} 
        {{ form_row (edit_form.tag) }} 
        {{ form_row (edit_form.access) }} 
        
    {{ form_rest(edit_form) }}
    <button class="btn btn-primary" type="submit">Update</button><a style="margin-left: 1em;" class="btn" href="{{ course_path('file') }}">Cancel</a>    
</form>       
       
<form action="{{ course_path('file_delete', { 'id': file.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>    
</div>
</div>

{% endblock %}
