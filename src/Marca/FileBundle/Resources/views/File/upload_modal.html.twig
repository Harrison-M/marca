{# Marca/FileBundle/Resources/views/File/upload_modal.html.twig #}

<script language="javascript"> 
$(document).ready(function() {
$(' form div ul li ul li').addClass('alert alert-error');
});
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Upload</h3>
</div>
<form action="#" method="post" {{ form_enctype(form) }}  novalidate="novalidate"> 
  <div class="modal-body">
     {{ form_errors(form) }}   
        <ul class="unstyled">
            <li class="label-margin-bottom">{{ form_row (form.name) }} </li>
            <li class="label-margin-bottom">{{ form_row (form.project) }} </li> 
            <li class="label-margin-bottom">{{ form_row (form.tag) }} </li> 
            <li class="label-margin-bottom">{{ form_row (form.access) }} </li> 
            <li>{{ form_row (form.file) }} </li>
        </ul>
    {{ form_rest(form) }}
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" type="submit">Upload</button>
  </div>
</form> 

